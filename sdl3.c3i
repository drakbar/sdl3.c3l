const uint AUDIO_MASK_BITSIZE     =  (0xFFu);
const uint AUDIO_MASK_FLOAT       =  (1u<<8);
const uint AUDIO_MASK_BIG_ENDIAN  =  (1u<<12);
const uint AUDIO_MASK_SIGNED      =  (1u<<15);

macro @audio_bitsize($x)
{
    return (($x) & AUDIO_MASK_BITSIZE);
}

macro @audio_bytesize($x)
{
    return (@audio_bitsize($x) / 8);
}

macro @audio_is_float($x)
{
    return (($x) &  AUDIO_MASK_FLOAT);
}

macro @audio_is_bigendian($x)
{
    return (($x) & AUDIO_MASK_BIG_ENDIAN);
}

macro @audio_is_little_endian($x)
{
    return (!@audio_is_big_endian($x));
}

macro @audio_is_signed($x)
{
    return (($x) & AUDIO_MASK_SIGNED);
}

macro @audio_is_int($x)
{
    return (!@audio_is_float($x));
}

macro @audio_is_unsigned($x)
{
    return (!@audio_is_signed($x));
}

